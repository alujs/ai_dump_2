{
  "mcpServers": {
    "mcp-controller": {
      "command": "node",
      "args": [
        "<ABSOLUTE_REPO_ROOT>/.ai/mcp-controller/scripts/run-mcp-stdio.mjs"
      ],
      "env": {
        "MCP_REPO_ROOT": "<ABSOLUTE_REPO_ROOT>",
        "MCP_TARGET_REPO_ROOT": "<ABSOLUTE_REPO_ROOT>/test-app",
        "MCP_ENABLE_DASHBOARD": "true",
        "MCP_DASHBOARD_PORT": "8722",
        "NEO4J_URI": "bolt://127.0.0.1:7687",
        "NEO4J_USERNAME": "neo4j",
        "NEO4J_PASSWORD": "12345678",
        "NEO4J_DATABASE": "piopex"
      }
    }
  }
}
